{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "5.4.8",
  "description": "__MSG_extDescription__",
  "default_locale": "ko",

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "notifications",
    "sidePanel",
    "downloads",
    "scripting",
    "alarms"
  ],

  "host_permissions": [
    "*://*.sooplive.co.kr/*",
    "*://*.afreecatv.com/*",
    "https://point.sooplive.co.kr/*",
    "https://www.google-analytics.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://play.sooplive.co.kr/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://play.sooplive.co.kr/*"],
      "js": ["content-main.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://play.sooplive.co.kr/*"],
      "js": ["selectors-config.js", "chat-collector.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["lib/sql-wasm.wasm"],
      "matches": ["<all_urls>"]
    }
  ]
}
