{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "2.5.0",
  "description": "__MSG_extDescription__",
  "default_locale": "ko",

  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "offscreen",
    "downloads",
    "sidePanel",
    "scripting",
    "webRequest"
  ],

  "host_permissions": [
    "*://*.sooplive.co.kr/*",
    "*://*.afreecatv.com/*",
    "*://livestream-manager.sooplive.co.kr/*",
    "*://live.sooplive.co.kr/*",
    "*://live-*.sooplive.co.kr/*",
    "*://live-*.afreecatv.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

  "content_scripts": [
    {
      "matches": ["https://play.sooplive.co.kr/*"],
      "js": ["audio-hook.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://play.sooplive.co.kr/*"],
      "js": ["content-main.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://play.sooplive.co.kr/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
